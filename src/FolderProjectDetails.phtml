			</a>

			<a href="#" onclick="return copy(this);">
				<i class="fa fa-clipboard" aria-hidden="true"></i>
				<input value="<?=
			realpath(__DIR__ . '/../NetBeansProjects/' .$this->path)
				?>" style="display: none;" title="Windows path"/>
