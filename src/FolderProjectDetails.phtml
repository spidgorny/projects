?>
<div class="panel panel-<?= $panelClass ?>">
	<div class="panel-heading">
		<h4>
			<?= $this->showIcon() ?>
			<a href="?path=<?= urlencode($this->path) ?>" style="color: white">
				<?= ($this->path) ?>
				(<?= $this->countFiles($this->path) ?>)
			</a>
		</h4>
	</div>
	<div class="panel-body">
		<?php if ($this->isProject()) { ?>
			<ul class="bare">
				<?= output($this->showProjectInfo()) ?>
